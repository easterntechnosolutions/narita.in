                    <td class="text-left">{{ entry_btntext }} </td>
                    <td class="text-left">{{ entry_textcolor }}</td>
                    <td class="text-left">{{ entry_link }}</td>
                    <td class="text-center">{{ entry_image }}</td>
                    <td class="text-left">{{ entry_textalignment }}</td>
                    <td class="text-left">{{ entry_textposition }}</td>
                    <td class="text-left">{{ entry_sort_order }}</td>
                    <td></td>
                  </tr>
                </thead>
                <tbody>
                  {% if ishi_images[language.language_id] %}
                  {% for ishi_image in ishi_images[language.language_id] %}
                  <tr id="image-row{{ image_row }}">
                    <td class="text-left">
                      <input type="text" name="ishi_image[{{ language.language_id }}][{{ image_row }}][title]" value="{{ ishi_image.title }}" placeholder="{{ entry_title }}" class="form-control" />
                      {% if error_ishi_image[language.language_id][image_row] %}
                        <div class="text-danger">{{ error_ishi_image[language.language_id][image_row] }}</div>
                      {% endif %}
                    </td>
                    <td class="text-left">
                      <input type="text" name="ishi_image[{{ language.language_id }}][{{ image_row }}][subtitle]" value="{{ ishi_image.subtitle }}" placeholder="{{ entry_subtitle }}" class="form-control" />
                      {% if error_ishi_image[language.language_id][image_row] %}
