							<option value="ishi-style-dot3" {% if dot_style == 'ishi-style-dot3' %} selected="selected" {% endif %}>{{ entry_dot3 }}</option>
							<option value="ishi-style-dot4" {% if dot_style == 'ishi-style-dot4' %} selected="selected" {% endif %}>{{ entry_dot4 }}</option>
							<option value="ishi-style-dot5" {% if dot_style == 'ishi-style-dot5' %} selected="selected" {% endif %}>{{ entry_dot5 }}</option>
