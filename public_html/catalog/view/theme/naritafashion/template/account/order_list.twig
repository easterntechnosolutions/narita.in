{{ header }}
  <div class="breadcrumb-container">
    <img src="image/catalog/categoryimage.png">
    <div class="container">
      <h2 class="page-title">{{ heading_title }}</h2>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
<div id="account-order" class="container wrapper_container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6 column_left' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9 column_center' %}
    {% else %}
    {% set class = 'col-sm-12 column_full' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {% if orders %}
      <div class="table-responsive">
        <table class="table table-bordered">
          <tbody>
           {% for order in orders %}
          <thead>
            <tr>
              <td class="text-right">{{ column_order_id }}</td>
              <td class="text-left">{{ column_date_added }}</td>
              <td class="text-right">{{ column_total }}</td>
              <td class="text-left">{{ column_status }}</td>
              <td class="text-left">{{ column_customer }}</td>
              <td class="text-right">{{ column_product }}</td>
              <td></td>
            </tr>
          </thead>
            <tr>
              <td class="text-left">#{{ order.order_id }}</td>
              <td class="text-left">{{ order.date_added }}</td>
              <td class="text-left">{{ order.total }}</td>
              <td class="text-left">{{ order.status }}</td>
              <td class="text-left">{{ order.name }}</td>
              <td class="text-left">{{ order.products }}</td>
            </tr>
              <tr>
                <td class="text-right">
                  <a href="{{ order.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-info">ORDER DETAILS</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
      </div>
      <div class="row">
        <div class="col-sm-6 text-left">{{ pagination }}</div>
        <div class="col-sm-6 text-right">{{ results }}</div>
      </div>
      {% else %}
      <div class="order-title">{{ text_noorder }}</div>
      <p>{{ text_empty }}</p>
      <div class="pull-left">
        <a href="{{ continue1 }}" class="btn btn-default">{{ button_shopping }}</a>
      </div>
      {% endif %}
      {{ content_middle }}{{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}
