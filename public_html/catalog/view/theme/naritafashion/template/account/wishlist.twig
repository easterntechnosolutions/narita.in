{{ header }}
<div id="account-wishlist" class="container wrapper_container">
  <div id="account-tracking" class="container wrapper_container">
  <div class="breadcrumb-container">
    <h1 class="page-title">{{ heading_title }}</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6 column_left' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9 column_center' %}
    {% else %}
    {% set class = 'col-sm-12 column_full' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {% if products %}
      
          {% for product in products %}
          <div class="product-layout product-grid col-lg-4 col-md-4 col-sm-6 col-xs-12">
            <div class="product-container">
              <div class="product-thumb">
                <div class="image">
                  {% if product.thumb %}
                  <a href="{{ product.href }}">
                    <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" />
                  </a>
                  {% endif %}
                </div>
                <div class="product-description">
                  <h4><a href="{{ product.href }}">{{ product.name }}</a></h4> 
                    {% if product.price %}
                    <p class="price">
                      {% if not product.special %}
                      {{ product.price }}
                      {% else %}
                      <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span>  
                      {% endif %}
                    </p>
                    {% endif %}
                    <a href="{{ product.remove }}" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-default">{{text_wishlistbtn}}</a></div>
                </div>
              </div>
            </div>
          {% endfor %}
          
        </div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ back }}" class="btn btn-primary">{{ button_back }}</a></div>
      </div>
      {{ content_middle }}{{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}