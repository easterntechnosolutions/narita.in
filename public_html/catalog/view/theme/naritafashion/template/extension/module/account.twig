<div class="account-details">
  <div class="list-group">
    {% if not logged %}
    <a href="{{ login }}" class="list-group-item">{{ text_login }}</a> 
    <a href="{{ register }}" class="list-group-item">{{ text_register }}</a> 
    <a href="{{ forgotten }}" class="list-group-item">{{ text_forgotten }}</a>
    {% endif %}
    <a href="{{ account }}" class="list-group-item {{ account_active }}">{{ text_account }}</a>
    {% if logged %}
    <a href="{{ edit }}" class="list-group-item {{ edit_active }}">{{ text_edit }}</a> 
    <a href="{{ password }}" class="list-group-item {{ pass_active }}">{{ text_password }}</a>
    {% endif %}
    <a href="{{ address }}" class="list-group-item {{ address_active }}">{{ text_address }}</a> 
    <a href="{{ wishlist }}" class="list-group-item {{ wishlist_active }}">{{ text_wishlist }}</a> 
    <a href="{{ order }}" class="list-group-item {{ order_active }}">{{ text_order }}</a> 
    <!-- <a href="{{ download }}" class="list-group-item {{ download_active }}">{{ text_download }}</a> -->
    <!-- <a href="{{ recurring }}" class="list-group-item {{ recurring_active }}">{{ text_recurring }}</a>  -->
    <!-- <a href="{{ reward }}" class="list-group-item {{ reward_active }}">{{ text_reward }}</a> -->
    <a href="{{ return }}" class="list-group-item {{ return_active }}">{{ text_return }}</a> 
    <a href="{{ transaction }}" class="list-group-item {{ trans_active }}">{{ text_transaction }}
    <a href="{{ download }}" class="list-group-item {{ download_active }}">{{ text_download }}</a>
    <a href="{{ newsletter }}" class="list-group-item {{ news_active }}">{{ text_newsletter }}</a>
    {% if logged %}
    <a href="{{ logout }}" class="list-group-item">{{ text_logout }}</a>
    {% endif %}
  </div>
</div>