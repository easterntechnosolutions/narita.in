<section class="smartblog_block clearfix">
	<div class="block_content container">
		<div class="row">
		    <div class="section-header">
		      	<h2 class="home-title">{{ heading }}</h2>
		    </div>
			<div id="smartblog-carousel" class="smartblog-carousel owl-carousel">
				{% for blog in blogs %}	
					<div class="item">
						<div class="blog_post">
							<div class="news_module_image_holder">
								{% if blog.image %} 
								<a href="{{ blog.href }}">
									<img src="{{ blog.image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-responsive" />
								</a>
								{% endif %} 
								<div class="date-month">
									<div class="date-time">{{ blog.date_added }}</div>
								</div>	 		 					
							</div>
							<div class="blog_content">
								<h4 class="blog_title"><a href="{{ blog.href }}">{{ blog.title }}</a> </h4>
								<div class="blog-desc"> {{ blog.description }} </div>
							</div>
						</div>
					</div>	
				{% endfor %}
			</div>
		</div>
	</div>
	<script type="text/javascript">
		$('.smartblog_block .owl-carousel').owlCarousel({
			loop:true,
			nav:true,
			dots:{{ dots }},
			rtl: $('html').attr('dir') == 'rtl'? true : false,
			navText: ["<i class='fa fa-angle-left'></i>","<i class='fa fa-angle-right'></i>"],
			autoplay:false, 
			responsive:{
				0:{
                	items:1
				},
				544:{
					items:1
				},
				768:{
					items:2
				},
				992:{
					items:2
				},
				1200:{
					items:3
				}
			}
		});
	</script>
</section>