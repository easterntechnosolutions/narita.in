{{ header }} 
<div class="breadcrumb-container">
  <img src="image/catalog/blogbreadcrumb.png"/>
  <div class="container">
    <h1 class="page-title">{{ heading_title }}</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
</div>
<div class="container wrapper_container">
  <div class="row">{{ column_left }} 
    {% if (column_left and column_right) %} 
    {% set class = 'col-sm-6 column_left' %} 
    {% elseif (column_left or column_right) %} 
    {% set class = 'col-sm-9 column_center' %} 
    {% else %} 
    {% set class = 'col-sm-12 column_full' %} 
    {% endif %} 
    <div id="content" class="{{ class }} all-blog">{{ content_top }} 
      <h1>{{ text_blogs }}</h1>
      {% if (blogs) %} 
        {% for blog in blogs %} 
          <div class="sdsarticleCat clearfix row">
            {% if blog.blog_data %} 
              {% for topic in blog.blog_data %} 
                <div class="blog-content col-lg-6 col-md-6 col-sm-6 col-xs-12">
                  <a href="{{ topic.href }}">
                    {% if topic.image %} 
                      <div class="blog-left-content articleContent">
                        <div class="blog-image">
                          <img src="{{ topic.image }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-responsive" />
                        </div>
                      </div>
                    {% endif %} 
                      <div class="blog-right-content smartblog-desc">
                        <div class="blog-date-comment">
                          <div class="blog-title">{{ topic.title }}</div>
                          <div class="blog-date">{{ topic.date_added }}</div>
                          <!-- <div class="comment-wrapper">
                            <i class="fa fa-comments"></i> <span class="write-comment-count">{{ topic.total_comments }} {{ entry_comment }}</span>
                            <span class="write-comment"> <a href="{{ topic.href }}">{{ text_leave_comment }}</a> </span>
                          </div> -->
                        </div>
                        <div class="blog-desc">{{ topic.description |slice(0, 135) }} </div>      
                        <div class="read-more btn btn-default">{{ text_read_more }}</div>  
                      </div>
                  </a>    
                </div>
              {% endfor %} 
            {% else %} 
              <div class="panel-body text-center">{{ text_no_blogs }}</div>
            {% endif %} 
          </div>
        {% endfor %} 
      {% else %} 
        <div class="panel-body text-center">{{ text_no_blogs }}</div>
      {% endif %} 
      {{ content_middle }}{{ content_bottom }}
    </div>
  {{ column_right }}</div>
</div>
{{ footer }}
<style>
    .all-blog .sdsarticleCat .blog-content:nth-child(3) {
        clear: left;
    }
</style>