{{ header }}
<div id="information-information" class="wrapper_container">
  <div class="breadcrumb-container">
    <img src="{{ breadcrumb_image }}"/>
    <div class="container">
      <h1 class="page-title">{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6 column_left' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9 column_center' %}
    {% else %}
    {% set class = 'col-sm-12 column_full' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {{ description }}{{ content_middle }}{{ content_bottom }}</div>
    {{ column_right }}</div>
    </div>
</div>
<style>
    @media (max-width: 991px) { 
        #information-information .breadcrumb-container {
            margin-bottom: 30px;
        } 
    }
</style>
{{ footer }}