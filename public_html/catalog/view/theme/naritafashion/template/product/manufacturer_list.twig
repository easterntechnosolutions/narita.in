{{ header }}
<div id="product-manufacturer" class="container wrapper_container">
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6 column_left' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9 column_center' %}
    {% else %}
    {% set class = 'col-sm-12 column_full' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      {% if categories %}
      <div class="a-link-group">
        <strong>{{ text_index }}</strong> 
        {% for category in categories %}
          &nbsp;&nbsp;&nbsp;
          <a href="index.php?route=product/manufacturer#{{ category.name }}">{{ category.name }}</a> 
        {% endfor %} 
      </div>
      {% for category in categories %}
      <div class="a-link-list">
        <div class="a-link-heading">
          <p id="{{ category.name }}">{{ category.name }}</p>
        </div>
        <div class="a-link-content">
          {% if category.manufacturer %}
            {% for manufacturers in category.manufacturer|batch(4) %}
            <div class="row"> 
              {% for manufacturer in manufacturers %}
                <div class="col-sm-3"><a href="{{ manufacturer.href }}">{{ manufacturer.name }}</a></div>
              {% endfor %} 
            </div>
            {% endfor %}
          {% endif %}
        </div>
      </div>
      {% endfor %}
      {% else %}
      <p>{{ text_empty }}</p>
      <div class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="btn btn-primary">{{ button_continue }}</a></div>
      </div>
      {% endif %}
      {{ content_middle }}{{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}