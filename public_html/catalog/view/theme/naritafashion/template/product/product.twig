{{ header }}
<script src="catalog/view/javascript/bxslider.js" type="text/javascript"></script>
<div id="product-product" class="container wrapper_container">
  <div class="breadcrumb-container">
    <h1 class="page-title">{{ heading_title }}</h1>
    <ul class="breadcrumb">
      {% for breadcrumb in breadcrumbs %}
      <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
      {% endfor %}
    </ul>
  </div>
  <div class="row">{{ column_left }}
      {% if column_left and column_right %}
      {% set class = 'col-sm-6 column_left' %}
      {% elseif column_left or column_right %}
      {% set class = 'col-sm-9 column_center' %}
      {% else %}
      {% set class = 'col-sm-12 column_full' %}
      {% endif %}
      <div id="content" class="{{ class }}">
        <div class="product_carousel">
          <div class="row"> {% if column_left or column_right %}
            {% set class = 'col-md-6 col-sm-6' %}
            {% else %}
            {% set class = 'col-md-6 col-sm-6' %}
            {% endif %}
            <div class="col-md-8 col-sm-8 product-left"> 
              <div class="product-left-title hidden-lg hidden-md hidden-sm">
                <h2 class="product-title">{{ heading_title }}</h2>
                <ul class="list-unstyled price">
                  {% if not special %}
                    <li>
                      <h2 class="product-price">{{ price }}</h2>
                      <label>*inclusive of all taxes</label>
                    </li>
                    {% else %}
                    <li class="product-price">
                      <h2 sfd>{{ special }}</h2>
                    </li>
                    <li class="product-dis"><span style="text-decoration: line-through;">{{ price }}</span></li>
                    {% endif %}
                  </ul>
              </div>
              {% if thumb or images %}
                  <div class="product-image thumbnails_horizontal row">
                    {% if images %}
                      <div class="image_show col-lg-3 col-md-3 col-sm-3 col-xs-3">  
                        <div id="slider_carousel" class="bxslider">
                          {% for image in images %}
                            <div class="image-additional item">
                              <a class="thumbnail slide" title="{{ heading_title }}"> 
                                <img class="thumbnail-img" src="{{ image.thumb }}" data-src="{{ image.thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                              </a>
                            </div>
                          {% endfor %}
                        </div>
                      </div>    
                    {% endif %}
                    {% if thumb %}
                      <div class="carousel-container col-lg-9 col-md-9 col-sm-9 col-xs-9">
                        <a class="thumbnail"  title="{{ heading_title }}">
                          <img class="thumbnail-large" src="{{ popup }}" title="{{ heading_title }}" alt="{{ heading_title }}" id ="expandedImg" />
                          {% if discount_percentage %}
                          <div class="percentage-bg">
                          </div>    
                          <span class="percentage-text">{{ discount_percentage }}%</span>
                          {% endif %}
                        </a>
                      </div>
                    {% endif %}
                  </div>
              {% endif %}       
            </div>
            {% if column_left or column_right %}
            {% set class = 'col-md-6 col-sm-6' %}
            {% else %}
            {% set class = 'col-md-6 col-sm-6' %}
            {% endif %}
            <div class="col-md-4 col-sm-4 product-right">  
              <div class="product-left-title hidden-xs ">
                <h1 class="product-title">{{ heading_title }}</h1>
              </div>              
              <div class="rating">
                <div class="product-rating">
                  {{rating}}
                </div>
                <span class="fa fa-stack">
                    <i class="fa fa-star fa-stack-2x {% if product.rating  > 0.0%} gray {% else %} yellow {% endif %}"></i>
                </span>
                <div class="total-review">
                  ({{reviews}})
                </div>
              </div>
              {% if sku %}
                <div class="sku">
                  <div class="sku-title">{{ text_sku }} </div>
                  <li>{{ sku }}</li>
                </div>
              {% endif %} 
              <div id="product-size" class="size"> 
                {% if options %}
                  <div class="row">
                  {% for option in options %}  
                    {% if option.type == 'radio' %}
                      <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="form-group{% if option.required %} required {% endif %}">
                          <label class="control-label radio-text">{{ option.name }}</label>
                          <div id="input-option{{ option.product_option_id }}"> {% for option_value in option.product_option_value %}
                            <div class="radio{% if not option_value.quantity %} out-of-stock{% endif %}">
                                <input type="radio" name="option[{{ option.product_option_id }}]" value="{{ option_value.product_option_value_id }}" {% if loop.first %}checked{% endif %}/>
                              <label {% if loop.first %}check="checked"{% endif %}>
                                {% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}                  
                                {{ option_value.name }}
                                {% if option_value.price %}
                                ({{ option_value.price_prefix }}{{ option_value.price }})
                                {% endif %} </label>
                            </div>
                            {% endfor %} 
                          </div>
                        </div>
                        <div class="form-group sizechart">
                            <!-- Button trigger modal -->
                              <div class="sizechart" data-toggle="modal" data-target="#exampleModalLong">
                                  Size Chart
                              </div>
                            <!-- Modal -->
                              
                        </div>
                      </div>
                    {% endif %}
                  {% endfor %}
                  </div>
                {% endif %}
                {% if minimum > 1 %}
                  <div class="alert col-lg-12 col-md-12 col-sm-12 col-xs-12"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
                {% endif %}
              </div>
              <div id="product" class="panel panel-default product-length"> 
                {% if options %}
                <div class="options-title panel-heading" role="tab" id="headingOne">
                  <a data-toggle="collapse" href="#tab-option" data-parent="#product" aria-expanded="false">
                    <h3 class="option">{{ text_option }}<span class="optional">({{text_optional}})</span></h3>
                  </a>
                </div>
                    <div id="tab-option" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
                          {% for option in options %}                    
                          {% if option.type == 'select' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %} option-details">
                                <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                <select name="option[{{ option.product_option_id }}]" id="input-option{{ option.product_option_id }}" class="form-control">
                                  <option value="">{{ text_select }}</option>
                                  {% for option_value in option.product_option_value %}
                                  <option value="{{ option_value.product_option_value_id }}">{{ option_value.name }}
                                  {% if option_value.price %}
                                  ({{ option_value.price_prefix }}{{ option_value.price }})
                                  {% endif %} </option>
                                  {% endfor %}
                                </select>
                              </div>
                            </div>
                          {% endif %}
                          {% if option.type == 'checkbox' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %} ">
                                <label class="control-label checkbox-text">{{ option.name }}</label>
                                <div id="input-option{{ option.product_option_id }}"> {% for option_value in option.product_option_value %}
                                  <div class="checkbox">
                                    <label>
                                      <input type="checkbox" name="option[{{ option.product_option_id }}][]" value="{{ option_value.product_option_value_id }}" />
                                      {% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
                                      {{ option_value.name }}
                                      {% if option_value.price %}
                                      ({{ option_value.price_prefix }}{{ option_value.price }})
                                      {% endif %} </label>
                                  </div>
                                  {% endfor %}
                                </div>
                              </div>
                            </div>
                          {% endif %}
                          {% if option.type == 'text' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %}">
                                <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control" />
                              </div>
                            </div>
                          {% endif %}
                          {% if option.type == 'textarea' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %}">
                                <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                <textarea name="option[{{ option.product_option_id }}]" rows="5" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control">{{ option.value }}</textarea>
                              </div>
                            </div>
                          {% endif %}
                          {% if option.type == 'file' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %}">
                                <label class="control-label">{{ option.name }}</label>
                                <button type="button" id="button-upload{{ option.product_option_id }}" data-loading-text="{{ text_loading }}" class="btn btn-default btn-block btn-file"><i class="fa fa-upload"></i> {{ button_upload }}</button>
                                <input type="hidden" name="option[{{ option.product_option_id }}]" value="" id="input-option{{ option.product_option_id }}" />
                              </div>
                            </div>
                          {% endif %}
                          {% if option.type == 'date' %}
                            <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                              <div class="form-group{% if option.required %} required {% endif %}">
                                <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                                <div class="input-group date">
                                  <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD" id="input-option{{ option.product_option_id }}" class="form-control" />
                                  <span class="input-group-btn">
                                  <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                                  </span>
                                </div>
                              </div>
                            </div>
                          {% endif %}
                        {% if option.type == 'datetime' %}
                          <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group{% if option.required %} required {% endif %}">
                              <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                              <div class="input-group datetime">
                                <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD HH:mm" id="input-option{{ option.product_option_id }}" class="form-control" />
                                <span class="input-group-btn">
                                <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                                </span>
                              </div>
                            </div>
                          </div>
                        {% endif %}
                        {% if option.type == 'time' %}
                          <div class="product_option col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="form-group{% if option.required %} required {% endif %}">
                              <label class="control-label" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
                              <div class="input-group time">
                                <input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="HH:mm" id="input-option{{ option.product_option_id }}" class="form-control" />
                                <span class="input-group-btn">
                                <button type="button" class="btn btn-default"><i class="fa fa-calendar"></i></button>
                                </span>
                              </div>
                            </div>
                          </div>
                        {% endif %}
                      {% endfor %}
                    </div>
                {% endif %}
                {% if recurrings %}
                  <h3>{{ text_payment_recurring }}</h3>
                  <div class="form-group required">
                    <select name="recurring_id" class="form-control">
                      <option value="">{{ text_select }}</option>
                      {% for recurring in recurrings %}
                      <option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
                      {% endfor %}
                    </select>
                    {#<div class="help-block" id="recurring-description"></div>#}
                  </div>
                {% endif %}
                {% if minimum > 1 %}
                  <div class="alert alert-info col-lg-12 col-md-12 col-sm-12 col-xs-12"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
                {% endif %}
              </div>

              <div class="form-group wrap">
                <label class="control-label" for="input-quantity">{{ entry_qty }}</label>
                <div class="product-quantity">
                 <button type="button" id="sub" class="sub">-</button>
                  <input type="text" name="quantity" value="{{ minimum }}" size="2" id="input-quantity" class="form-control count" />
                  <button type="button" id="add" class="add">+</button>
                </div>  
              </div>
              {% if price %}
                <ul class="list-unstyled price">
                  {% if not special %}
                  <li class="product-price hidden-xs">
                    <h2>{{ price }}</h2>
                    <label>*inclusive of all taxes</label>
                  </li>
                  {% else %}
                  <li class="product-price hidden-xs">
                    <h2>{{ special }}</h2>
                  </li>
                  <li class="product-dis hidden-xs"><span style="text-decoration: line-through;">{{ price }}</span></li>
                  {% endif %}                  
                </ul>
              {% endif %}
              <ul class="list-unstyled price">
                {% if discounts %}
                <li>
                </li>
                {% for discount in discounts %}
                <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
                {% endfor %}
                {% endif %}
              </ul>
              <div class="form-group">
                <input type="hidden" name="product_id" value="{{ product_id }}"/>
                <label class="delivery">Expected Delivery Time in 7 days</label>
                <button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="btn btn-default btn-lg btn-block">{{ button_cart }}</button>
                <button type="button" data-toggle="tooltip" class="btn btn-primary wishlist" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product_id }}{{ size }}');">
                 {{ text_wishlist }}
                  <i class="fa fa-heart"></i>
                </button>
              </div> 
              <div class="product-details">
                      {% for attribute_group in attribute_groups %}
                        {% if loop.first %}
                            {% for attribute in attribute_group.attribute %}
                                <div class="att-info" >
                                  <div class="att-name">{{ attribute.name }}</div>
                                  <div class="att-text">{{ attribute.text }}</div>
                                </div>  
                            {% endfor %}
                        {% endif %}    
                      {% endfor %}
              </div>         
              <div class="tabs_info clearfix">
                <div id="accordion" class="panel-group" role="tab">

                  {% if attribute_groups %}
                    <div class="panel panel-default">
                      <div class="panel-heading" role="tab" id="headingThree">
                        {% if attribute_groups %}
                          <a data-toggle="collapse" href="#tab-specification" data-parent="#accordion" aria-expanded="true">{{ tab_attribute }}</a>
                        {% endif %}
                      </div> 
                      <div id="tab-specification" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingThree">            
                        {% if attribute_groups %}
                          <div class="panel-body">
                            <div class="att-details">
                              {% for attribute_group in attribute_groups %}
                                <!-- <strong>{{ attribute_group.name }}</strong> -->
                                {% if not loop.first %}
                                  {% for attribute in attribute_group.attribute %}
                                  <div class="att-info">
                                    <div class="att-name">{{ attribute.name }}</div>
                                    <div class="att-text">{{ attribute.text }}</div>
                                  </div>  
                                  {% endfor %}
                                {% endif %}
                              {% endfor %}
                            </div>
                          </div>
                        {% endif %}  
                      </div> 
                    </div>  
                  {% endif %} 
                  <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingOne">
                      <a data-toggle="collapse" href="#tab-description" data-parent="#accordion" aria-expanded="false"> {{ tab_description }} </a>
                    </div> 
                    <div id="tab-description" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">            
                       <div class="tab-description">{{ description }}</div>   
                    </div> 
                  </div> 
                  <div class="panel panel-default tab_review">
                    <div class="panel-heading" role="tab" id="headingTwo">
                      {% if review_status %}
                        <a data-toggle="collapse" href="#tab-review" data-parent="#accordion" aria-expanded="false">{{ tab_review }}</a>
                      {% endif %}
                    </div>
                    <div id="tab-review" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">     
                      {% if review_status %}
                        <div class="panel-body">
                          <form class="form-horizontal" id="form-review">
                            <div id="review"></div>
                            <h2>{{ text_write }}</h2>
                            {% if review_guest %}
                              <div class="form-group required">
                                <div class="col-sm-12">
                                  <label class="control-label" for="input-name">{{ entry_name }}</label>
                                  <input type="text" name="name" value="{{ customer_name }}" id="input-name" class="form-control" />
                                </div>
                              </div>
                              <div class="form-group required">
                                <div class="col-sm-12">
                                  <label class="control-label" for="input-review">{{ entry_review }}</label>
                                  <textarea name="text" rows="5" id="input-review" class="form-control"></textarea>
                                  {#<div class="help-block">{{ text_note }}</div>#}
                                </div>
                              </div>
                              <div class="form-group required">
                                <div class="col-sm-12">
                                  <label class="control-label radio-title">{{ entry_rating }}</label>&nbsp;&nbsp;&nbsp;
                                  <div class="form-radio">
                                    <span>{{ entry_bad }}</span>&nbsp;
                                    <input type="radio" name="rating" value="1" />
                                    &nbsp;
                                    <input type="radio" name="rating" value="2" />
                                    &nbsp;
                                    <input type="radio" name="rating" value="3" />
                                    &nbsp;
                                    <input type="radio" name="rating" value="4" />
                                    &nbsp;
                                    <input type="radio" name="rating" value="5" />
                                    &nbsp;<span>{{ entry_good }}</span>
                                  </div>
                                </div>
                              </div>
                              {{ captcha }}
                              <div class="buttons clearfix">
                                <div class="pull-right">
                                  <button type="button" id="button-review" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_continue }}</button>
                                </div>
                              </div>
                            {% else %}
                              {{ text_login }}
                            {% endif %}
                          </form>
                        </div>
                      {% endif %}
                    </div>
                  </div> 
                </div>
              </div>
              <p class="desc">{{ text_description }}</p>
            </div>
          </div>
        </div>
        <div class="content-block">
          {{ content_top }}
        </div>
        <div class="related-product">
          {% if products %}
              <div class="section-header">
                <h3 class="home-title">{{ text_related }}</h3>
              </div>
              <div class="related-carousel grid-container">
                {% for product in products %}
                <div class="item" {% if product.date_end %}data-countdowntime="{{ product.date_end }}"{% endif %}>
                  <div class="product-container transition">
                    <div class="product-thumb">
                        <div class="image">
                          <a href="{{ product.href }}">
                            <img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive"/>
                            {% if product.extra != '' and hover_image == 1 %}
                              <img class="product-img-extra img-responsive" alt="{{ product.name }}" title="{{ product.name }}" src= "{{ product.extra }}"/>
                            {% endif %}
                          </a>  
                          {% if product.discount_percentage %}
                          <div class="percentage-bg">
                          </div>    
                          <span class="percentage-text">{{ product.discount_percentage }}%</span>
                          {% endif %}
                          {% if product.stock_status %}<span class="outstock">{{ product.stock_status }}</span>{% endif %}    
                        </div> 
                        <div class="product-description">  
                          <h4><a href="{{ product.href }}">{{ product.name }}</a></h4>  
                           {% if product.price %}
                          <p class="price">
                            {% if not product.special %}
                            {{ product.price }}
                            {% else %}
                            <span class="price-new">{{ product.special }}</span><span class="price-old">{{ product.price }}</span>  
                            {% endif %}
                            {% if product.tax %}
                            <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                            {% endif %}
                          </p>
                          {% endif %} 
                          {% set product_size_options_length = product.product_size_options|length %}
                          {% if product_size_options_length %}
                            <div class="size-details">
                              <div class="size-title">Size Available:</div>
                              <div class="size">
                                {% for option in product.product_size_options %}
                                  <span> {{option.name}}</span>
                                {% endfor %}
                              </div>
                            </div>
                          {% endif %}             
                          <div class="rating">
                              <div class="product-rating">
                                {{product.rating}}
                              </div>
                              <span class="fa fa-stack">
                                  <i class="fa fa-star fa-stack-2x {% if product.rating  > 0.0%} yellow {% else %} grey {% endif %}"></i>
                              </span>
                              <div class="total-review">
                                ({{product.reviews}} Reviews)
                              </div>
                          </div>  
                        </div> 
                        {% if product.stock_status %}<span class="outstock-overlay"></span>{% endif %}
                    </div>               
                  </div>
                </div>
                {% endfor %} 
              </div>
          {% endif %}
        </div>
        {{ content_middle }}
      </div>
      {{ column_right }}</div>
</div>
<script type="text/javascript"><!--
  $('select[name=\'recurring_id\'], input[name="quantity"]').change(function(){
    $.ajax({
      url: 'index.php?route=product/product/getRecurringDescription',
      type: 'post',
      data: $('input[name=\'product_id\'], input[name=\'quantity\'], select[name=\'recurring_id\']'),
      dataType: 'json',
      beforeSend: function() {
        $('#recurring-description').html('');
      },
      success: function(json) {
        $('.alert-dismissible, .text-danger').remove();

        if (json['success']) {
          $('#recurring-description').html(json['success']);
        }
      }
    });
  });
//--></script> 
<script type="text/javascript"><!--
  $('#button-cart').on('click', function() {
    $.ajax({
      url: 'index.php?route=checkout/cart/add',
      type: 'post',
      data: $('input[type=\'text\'], input[type=\'hidden\'], input[type=\'radio\']:checked, input[type=\'checkbox\']:checked, select, textarea'),
      dataType: 'json',
      beforeSend: function() {
        $('#button-cart').button('loading');
      },
      complete: function() {
        $('#button-cart').button('reset');
      },
      success: function(json) {
        $('.alert-dismissible, .text-danger').remove();
        $('.form-group').removeClass('has-error');

        if (json['error']) {
          if (json['error']['option']) {
            for (i in json['error']['option']) {
              var element = $('#input-option' + i.replace('_', '-'));

              if (element.parent().hasClass('input-group')) {
                element.parent().after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
              } else {
                element.after('<div class="text-danger">' + json['error']['option'][i] + '</div>');
              }
            }
          }

          if (json['error']['recurring']) {
            $('select[name=\'recurring_id\']').after('<div class="text-danger">' + json['error']['recurring'] + '</div>');
          }

          // Highlight any found errors
          $('.text-danger').parent().addClass('has-error');
